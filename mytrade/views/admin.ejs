<html>
<head>
    <link rel='stylesheet' href='/stylesheets/public.css' />
    <link rel='stylesheet' href='/stylesheets/slick.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/jquery.mmenu.all.min.css' />
    <script src="/javascripts/jquery.min.js" type="text/javascript"></script>
    <script src="/javascripts/AddAndSet.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.mmenu.min.js" type="text/javascript"></script>
    <script src="/javascripts/slick.min.js" type="text/javascript"></script>
    <script src="/javascripts/public.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.placeholder.min.js" type="text/javascript"></script>
    <script src="/javascripts/vue.js" type="text/javascript"></script>
</head>
<body>
<%- include ../partials/header.ejs %>
<%- include ../partials/nav.ejs %>

<div id="admin">
    <ul style="font-size:20px;line-height: 20px;">
        <li v-for="eachPricing in pricingList">
            <span>姓名:{{eachPricing.name}}</span>
            <span>电话:{{eachPricing.phone}}</span>
            <span>邮箱:{{eachPricing.email}}</span>
            <span>地址:{{eachPricing.addr}}</span>
            <span>留言内容:{{eachPricing.pricingContents}}</span>
        </li>
    </ul>
</div>

<%- include ../partials/footer.ejs %>
<script>
	$(document).ready(function () {
		var getPricingList = function(){
			$.ajax({
				type: 'get',
				url: "/pricingList",
				success: function(data) {
                    //console.log(JSON.stringify(data));
					Admin.pricingList = data;
				},
				error: function() {
					alert("getPricingList error");
				}
			});
		};
		getPricingList();
	});
</script>

<script>
	var Admin = new Vue({
		el:"#admin",
		data:{
			pricingList:null
		},
		methods:{

		}

	});

</script>
</body>
</html>