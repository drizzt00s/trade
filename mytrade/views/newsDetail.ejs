</head>
<body>
<%- include ../partials/header.ejs %>
<%- include ../partials/nav.ejs %>

<section class="ny news-show clearfix" id="newsDetail">
    <div class="container">
        <div class="leftz">
            <div class="box">
                <big>新闻资讯</big>
                <small>News</small>
                <ul>
                    <li><a href="/companyNews" title="公司新闻" id="4">公司新闻</a></li>
                    <li class="active"><a href="/industryNews" title="行业新闻" id="3">行业新闻</a></li>
                </ul>
            </div>
            <div class="box1">
                <p class="text"> <i><img class="vcenter" src="/images/addr.png" /></i> 上海市嘉定区纬五路228号 </p>
                <div class="text1">
                    <i><img class="vcenter" src="/images/left-ico.png" /></i>
                    <span>服务热线</span>
                    <em>18601665132</em>
                </div>
            </div>
        </div>
        <div class="rightz">
            <div class="title">
                <big>行业新闻</big>
            </div>
            <div class="title-1">
                {{news.title}}

            </div>
            <div class="source">

            </div>
            <div style="font-size:16px;line-height:30px;"> {{news.fullContent}}</div>
        </div>
    </div>
</section>

<%- include ../partials/footer.ejs %>

<script>
	$(document).ready(function () {
        var getNewsDetail = function () {
        	var uid = "";
        	var pageSearch = window.location.search;
        	var i = pageSearch.indexOf("=");
        	var id = pageSearch.substring(i+1);
	        $.ajax({
		        type: 'post',
		        url: "/getIndustryNewsList",
                data:{id:id},
		        success: function(data) {
                    //console.log(JSON.stringify(data));
			        IndustryNews.news = data
		        },
		        error: function() {
			        alert("getNewsList error");
		        }
	        });
        };
		getNewsDetail();


	});
</script>
<script>
	var IndustryNews = new Vue({
		el:"#newsDetail",
		data:{
            news:null

		}

	});

</script>
</body>
</html>